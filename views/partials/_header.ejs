<!-- template /views/partials/_header.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <title>TinyApp</title>
  <style>
    a > h1 {
      color: black;
      text-align: center
    }
    body {
      font-size:20px;
      padding:50px;
    }
    td {
      padding: 5px;
    }
    input[type="text"] {
      width: 250px;
    }
  </style>
</head>
<body>
  <div >
    <a href="/"><h1>TinyApp</h1></a>
    <% if (locals.username) { %>
      Hello, <%= username %>!
      <div style="float:right;">
        <form method="POST" action='/logout'>
          <button type="submit">Logout</button>
        </form>
      </div>
    <% } else { %>
      <div>
        <form method="POST" action='/login'>
          <input type="text" name="username" placeholder="username">
          <button type="submit">Login</button>
        </form>
      </div>
    <% } %>
  </div>
  &nbsp;
  <hr>